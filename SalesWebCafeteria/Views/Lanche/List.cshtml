@model IEnumerable<SalesWebCafeteria.Models.Lanche>

@{
    ViewData["Title"] = "List";
}

<hr />
<h3>List</h3>
<p>
    <a asp-action="Create" type="button" class="btn btn-outline-info">Cadastrar Novo</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoCurta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoDetalhada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemThumbnailUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsLanchePreferido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmEstoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescricaoCurta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescricaoDetalhada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagemUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagemThumbnailUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsLanchePreferido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmEstoque)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria)
                </td>
                <td>
                    <a class="badge rounded-pill bg-info" asp-action="Edit" asp-route-id="@item.LancheId">Editar</a>
                    <a class="badge rounded-pill bg-info" asp-action="Details" asp-route-id="@item.LancheId">Detalhes</a>
                    <a class="badge rounded-pill bg-info" asp-action="Delete" asp-route-id="@item.LancheId">Deletar</a>

                </td>
            </tr>
        }
    </tbody>
</table>

